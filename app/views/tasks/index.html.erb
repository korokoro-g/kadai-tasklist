<h1><%= current_user.name %>さんのタスク一覧</h1>

<ul>
    <% @tasks.each do |task| %>
        <li><%= link_to task.id, task %> :<%= task.status %> &gt; <%= task.content %></li>
    <% end %>
</ul>

<%= paginate @tasks %>

<%= link_to '新規タスクの登録', new_task_path %>

<p><%= link_to 'ログアウト', logout_path, method: :delete %></p>
